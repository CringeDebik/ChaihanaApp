<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderingPage">


    <EditText
        android:id="@+id/OrderingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_user_focused"
        android:drawablePadding="12dp"
        android:ems="14"
        android:hint="ФИО"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WarningOrderingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Warning"
        android:textColor="#C82B2B"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/OrderingName"
        app:layout_constraintStart_toStartOf="@+id/OrderingName" />

    <EditText
        android:id="@+id/OrderingPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_phone_number_focused"
        android:drawablePadding="12dp"
        android:ems="14"
        android:hint="Номер телефона"
        android:inputType="phone"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrderingName" />

    <TextView
        android:id="@+id/WarningOrderingPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Warning"
        android:textColor="#C82B2B"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/OrderingPhone"
        app:layout_constraintStart_toStartOf="@+id/OrderingPhone"/>

    <EditText
        android:id="@+id/OrderingAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_user_focused"
        android:drawablePadding="12dp"
        android:ems="14"
        android:hint="Адресс"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrderingPhone" />

    <TextView
        android:id="@+id/WarningOrderingAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Warning"
        android:textColor="#C82B2B"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/OrderingAdress"
        app:layout_constraintStart_toStartOf="@+id/OrderingAdress" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="600dp"
        android:layout_height="176dp"
        android:layout_marginTop="-25dp"
        android:layout_x="-56dp"
        android:layout_y="-50dp"
        android:background="@drawable/shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Welcometxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Оформление заказа"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WarningWhenOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Внимательно указывайте данные при заказе!"
        android:textColor="#E43C3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/OrderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-90dp"
        android:layout_marginBottom="40dp"
        android:text="Заполните следующие поля для заказа*"
        android:textColor="#7A7A7A"
        app:layout_constraintBottom_toTopOf="@+id/OrderingName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SubmitOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#99CC33"
        android:padding="15dp"
        android:text="ПОДТВЕРДИТЬ ЗАКАЗ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrderingAdress" />

</androidx.constraintlayout.widget.ConstraintLayout>