<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/KitchenTwoparent"
    android:layout_width="150dp"
    android:layout_height="225dp"
    android:layout_margin="10dp"
    app:cardElevation="7dp"
    android:scrollbars="none"
    app:strokeColor="#82BB31"
    app:strokeWidth="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <ImageView
            android:id="@+id/KitchenTwoItemImg"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/KitchenTwoItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/KitchenTwoItemImg"
            android:layout_centerHorizontal="true"
            android:text="Item name"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/KitchenTwoPrice"
            android:text="Price"
            android:textColor="@color/black"
            android:background="#82BB31"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/KitchenTwoItemTitle"/>

    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>