<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginInPage">

    <TextView
        android:id="@+id/Welcome_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Вход"
        android:textColor="#82BB31"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Login_In_PhoneNumber"
        app:layout_constraintEnd_toEndOf="@+id/Login_In_PhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/Login_In_PhoneNumber" />

    <TextView
        android:id="@+id/Forgot_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:clickable="true"
        android:padding="7dp"
        android:text="Не помню пароль"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin_In"
        app:layout_constraintStart_toStartOf="@+id/btnLogin_In"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin_In" />

    <EditText
        android:id="@+id/Login_In_PhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_phone_number_focused"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Номер телефона"
        android:inputType="phone"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Warning_Login_PhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Warning"
        android:textColor="#C82B2B"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/Login_In_PhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/Login_In_PhoneNumber" />

    <EditText
        android:id="@+id/Login_In_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_password_focused"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_In_PhoneNumber" />

    <TextView
        android:id="@+id/Warning_Login_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Warning"
        android:textColor="#C82B2B"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/Login_In_Password"
        app:layout_constraintStart_toStartOf="@+id/Login_In_Password" />

    <Button
        android:id="@+id/btnLogin_In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#99CC33"
        android:padding="15dp"
        android:text="Войти"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="@+id/Login_In_Password"
        app:layout_constraintStart_toStartOf="@+id/Login_In_Password" />


    <AbsoluteLayout
        android:id="@+id/AbsoluteLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-117dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="176dp"
            android:layout_x="158dp"
            android:layout_y="-52dp"
            android:background="@drawable/shape"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="-87dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="245dp"
            android:layout_height="109dp"
            android:layout_x="-28dp"
            android:layout_y="-22dp"
            android:background="@drawable/shape"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="-87dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_x="-226dp"
            android:layout_y="440dp"
            android:background="@drawable/shape"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="-87dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_x="202dp"
            android:layout_y="580dp"
            android:background="@drawable/shape"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="-87dp" />

        <ImageView
            android:id="@+id/lyingMan"
            android:layout_width="312dp"
            android:layout_height="460dp"
            android:layout_x="-48dp"
            android:layout_y="360dp"
            android:rotation="-25"
            android:src="@mipmap/lying_man" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="240dp"
            android:layout_height="54dp"
            android:layout_x="163dp"
            android:layout_y="29dp"
            android:src="@mipmap/app_text_logo" />


    </AbsoluteLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="294dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="465dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="375dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="124dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>